<div class="container-fluid">
  <div class="row">

    <div class="col-md-12">
      <div class="row">
        <% property.forEach(function(model){%>
        <div class="col-md-6">

          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                <%=property.name%>
              </h3>
            </div>
            <div class="panel-body">

              <div class="row">
                <div class="col-md-3 col-xs-3">
                  <img alt="image" class="img-rounded" width="150" height="150" src="<%=model.imageurl%>">
                </div>
                <div class="col-md-3 col-xs-3">

                  <ul class="list-group">
                    <li class="list-group-item"> <b>Estate :</b> <%=model.estate%></li>
                    <li class="list-group-item"><b>Gross Area :</b> <%=model.garea%> sq feet</li>
                    <li class="list-group-item"><b>Rent :</b> $<%=model.rent%></li>
                  </ul>

                </div>
              </div>
            </div>

          </div>

        </div>
        <%})%>
        <div class="col-md-6">

          <ul class="pagination">
            <li><a href="#"><<</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">>></a></li>
          </ul>
          <h2 class="col-sm-offset-1">Property Search Form</h2>

          <form action="/property/search" method="POST" class="form-horizontal">

            <div class="form-group">
              <label class="control-label col-sm-2">Estate: </label>
              <div class="col-sm-8">
                <select class="form-control" name="estate">
                  <option>Festival City</option>
                  <option>Royal Ascot</option>
                  <option>City One</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-sm-2">Bedrooms: </label>
              <div class="col-sm-8">
                <input class="form-control" name="bedroom" type="text" required>
              </div>
            </div>
            <button class="btn btn-default col-sm-offset-2" type="submit" value="ADD">Submit</button>
          </form>

        </div>

      </div>
    </div>

  </div>
</div>
