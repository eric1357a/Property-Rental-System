<h2 class="col-sm-offset-1">Property Create Form</h2>

<form action="/property/create" method="POST" class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-2">Property name: </label>
    <div class="col-sm-8">
      <input class="form-control" name="Property[name]" type="text" required>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Image URL: </label>
    <div class="col-sm-8">
      <input class="form-control" name="Property[imageurl]" type="text" required>
    </div>
  </div>

    <div class="form-group">
      <label class="control-label col-sm-2">Estate: </label>
      <div class="col-sm-8">
      <select class="form-control" name="Property[estate]" id="Property[estate]">
        <option>Festival City</option>
        <option>Royal Ascot</option>
        <option>City One</option>
      </select>
      </div>
    </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Bedrooms: </label>
    <div class="col-sm-8">
      <input class="form-control" name="Property[bedrooms]" type="number" min="0" required>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Gross Area: </label>
    <div class="col-sm-8">
      <input class="form-control" name="Property[garea]" type="number" min="0" required>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Expected Tenants: </label>
    <div class="col-sm-8">
      <input class="form-control" name="Property[tenants]" type="number" min="0" required>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Rent: </label>
    <div class="col-sm-8">
      <input class="form-control" name="Property[rent]" type="number" min="0" required>
    </div>
  </div>
  <button class="btn btn-default col-sm-offset-2" type="submit">Submit</button>
</form>
